---
import AuthorCard from "@components/Author/AuthorCard.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { getCollection } from "astro:content";
import { siteConfig } from "src/constants/site-config";

const authorCollections = await getCollection("author");
---

<MainLayout title="Autores">
  <section class="container px-6 py-10 mx-auto">
    <h1 class="text-3xl font-semibold text-white capitalize lg:text-4xl">
        {siteConfig.title}
    </h1>
    
    <section class="grid grid-cols-1 sm:grid-cols-2 gap-2 mt-10">
          {
              authorCollections.map((author)=>{
                  return <AuthorCard author={author}></AuthorCard>
              })
          }
  
    </section>
  </section>


</MainLayout>
